# Project Configuration
PROJECT_NAME=us-accidents-road-quality
ENVIRONMENT=development

# ============================================================================
# KAGGLE API CREDENTIALS
# ============================================================================
# Required for downloading datasets from Kaggle using kagglehub
# 
# HOW TO GET YOUR CREDENTIALS:
# 1. Go to https://www.kaggle.com/settings/account
# 2. Scroll to "API" section
# 3. Click "Create New API Token"
# 4. A file named kaggle.json will download with format:
#    {"username":"your_kaggle_username","key":"your_kaggle_api_key"}
# 5. Copy the username and key values below
# 6. Keep this .env file private - DO NOT commit to version control

KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key


# Data Paths
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
INTEGRATED_DATA_DIR=data/integrated

# US Accidents Dataset
ACCIDENTS_CSV_PATH=data/raw/accidents_raw/US_Accidents_March23.csv

# OpenStreetMap Configuration
OSM_CACHE_DIR=data/raw/osm_raw
OSM_USE_CACHE=True

# Geographic Configuration
# Example: Specify states or cities to process
# STATES=California,Texas,Florida
# CITIES=Los Angeles,Houston,Miami

# Coordinate Reference Systems
WGS84_EPSG=4326
WEB_MERCATOR_EPSG=3857

# Spatial Join Configuration
SPATIAL_JOIN_METHOD=nearest
MAX_DISTANCE_METERS=100

# Model Training
RANDOM_SEED=42
TEST_SIZE=0.2
VALIDATION_SIZE=0.1
N_FOLDS=5

# Model Parameters
XGBOOST_N_ESTIMATORS=100
XGBOOST_MAX_DEPTH=6
XGBOOST_LEARNING_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/pipeline.log

# API Keys (if needed)
# MAPBOX_API_KEY=your_api_key_here
# GOOGLE_MAPS_API_KEY=your_api_key_here

# Performance
N_JOBS=-1  # Use all available cores
CHUNK_SIZE=10000

# Notebook Outputs
FIGURE_DPI=300
FIGURE_FORMAT=png
